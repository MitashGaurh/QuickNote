<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShimmerRecyclerView">
        <attr name="shimmer_child_count" format="integer" />
        <attr name="shimmer_layout_manager" format="enum">
            <enum name="linear_vertical" value="0" />
            <enum name="linear_horizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="shimmer_grid_child_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="ToggleImageButton">
        <attr name="checkedDrawable" format="reference" />
        <attr name="uncheckedDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="MaterialSearchView">
        <attr name="searchBackground" format="integer" />
        <attr name="searchVoiceIcon" format="integer" />
        <attr name="searchCloseIcon" format="integer" />
        <attr name="searchBackIcon" format="integer" />
        <attr name="searchSuggestionIcon" format="integer" />
        <attr name="searchSuggestionBackground" format="integer" />
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
        <attr name="android:inputType" />
    </declare-styleable>

</resources>