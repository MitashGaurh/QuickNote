<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:id="@+id/fl_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54636A">

        <LinearLayout
            android:id="@+id/layout_format_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_undo"
                style="@style/ComposeTheme.FormatButton"
                app:srcCompat="@drawable/ic_undo" />

            <ImageView
                android:id="@+id/btn_redo"
                style="@style/ComposeTheme.FormatButton"
                app:srcCompat="@drawable/ic_redo" />

            <com.mitash.quicknote.view.widget.ToggleImageButton
                android:id="@+id/btn_bold"
                style="@style/ComposeTheme.FormatButton"
                app:checkedDrawable="@drawable/ic_format_bold_blue"
                app:uncheckedDrawable="@drawable/ic_format_bold_white" />

            <com.mitash.quicknote.view.widget.ToggleImageButton
                android:id="@+id/btn_italic"
                style="@style/ComposeTheme.FormatButton"
                app:checkedDrawable="@drawable/ic_format_italic_blue"
                app:uncheckedDrawable="@drawable/ic_format_italic_white" />

            <com.mitash.quicknote.view.widget.ToggleImageButton
                android:id="@+id/btn_quote"
                style="@style/ComposeTheme.FormatButton"
                app:checkedDrawable="@drawable/ic_format_quote_blue"
                app:uncheckedDrawable="@drawable/ic_format_quote_white" />

            <com.mitash.quicknote.view.widget.ToggleImageButton
                android:id="@+id/btn_un_order_list"
                style="@style/ComposeTheme.FormatButton"
                app:checkedDrawable="@drawable/ic_format_list_bulleted_blue"
                app:uncheckedDrawable="@drawable/ic_format_list_bulleted_white" />

            <com.mitash.quicknote.view.widget.ToggleImageButton
                android:id="@+id/btn_order_list"
                style="@style/ComposeTheme.FormatButton"
                app:checkedDrawable="@drawable/ic_format_list_numbered_blue"
                app:uncheckedDrawable="@drawable/ic_format_list_numbered_white" />

            <ImageView
                android:id="@+id/btn_img"
                style="@style/ComposeTheme.FormatButton"
                app:srcCompat="@drawable/ic_image" />

            <com.mitash.quicknote.view.widget.ToggleImageButton
                android:id="@+id/btn_link"
                style="@style/ComposeTheme.FormatButton"
                app:checkedDrawable="@drawable/ic_insert_link_blue"
                app:uncheckedDrawable="@drawable/ic_insert_link_white" />

        </LinearLayout>

    </HorizontalScrollView>

</layout>
